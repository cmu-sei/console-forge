  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "shell",
      "label": "Run X11VNC Desktop",
      "detail": "Pulls and starts the X11VNC Docker image for debugging. (Once pulled, you can just stop/start it using Docker Desktop if more comfy.)",
      "command": "python",
      "args": [
        "${workspaceFolder}/tools/x11vnc_desktop.py",
        "--password",
        "mypw",
        "-d"
      ],
      "problemMatcher": []
    }
  ]
}
